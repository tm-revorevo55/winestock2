<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Wine name</th>
      <th>Producer</th>
      <th>Country</th>
      <th>Region</th>
      <th>General notes</th>
      <th>Vintage</th>
      <th>Price</th>
      <th>Tasted on</th>
      <th>Tasted pts</th>
      <th>Tasting notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.wine_name %></td>
        <td><%= stock.producer %></td>
        <td><%= stock.country %></td>
        <td><%= stock.region %></td>
        <td><%= stock.general_notes %></td>
        <td><%= stock.vintage %></td>
        <td><%= stock.price %></td>
        <td><%= stock.tasted_on %></td>
        <td><%= stock.tasted_pts %></td>
        <td><%= stock.tasting_notes %></td>
        <td><%= link_to 'Show', stock %></td>
        <td><%= link_to 'Edit', edit_stock_path(stock) %></td>
        <td><%= link_to 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

